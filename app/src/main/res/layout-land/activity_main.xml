<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainActivity"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context="kon.demo.MainActivity">


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:id="@+id/inventoryButton"
        android:src="@drawable/inventory"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:id="@+id/inventoryText"
        android:layout_marginEnd="27dp"
        android:textColor="@color/TextColor"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="60dp"
        android:layout_below="@+id/inventoryButton"
        android:layout_alignEnd="@+id/inventoryButton" />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:id="@+id/recipeButton"
        android:src="@drawable/recipe2"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignTop="@+id/inventoryButton"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipes"
        android:id="@+id/recipeText"
        android:textColor="@color/TextColor"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="60dp"
        android:layout_below="@+id/recipeButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:id="@+id/shoppingButton"
        android:src="@drawable/shopping3"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignTop="@+id/recipeButton"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grocery_list"
        android:id="@+id/shoppingText"
        android:layout_marginEnd="18dp"
        android:textColor="@color/TextColor"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="60dp"
        android:layout_below="@+id/shoppingButton"
        android:layout_alignEnd="@+id/shoppingButton" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:id="@+id/favoritesButton"
        android:src="@drawable/favorites3"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_below="@+id/inventoryText"
        android:layout_toEndOf="@+id/inventoryButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites"
        android:id="@+id/favoritesText"
        android:textColor="@color/TextColor"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="60dp"
        android:layout_below="@+id/favoritesButton"
        android:layout_toStartOf="@+id/recipeButton"
        android:layout_marginEnd="19dp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@color/background"
        android:id="@+id/settingsButton"
        android:src="@drawable/settings1"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_below="@+id/shoppingText"
        android:layout_toStartOf="@+id/shoppingButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:id="@+id/settingsText"
        android:textColor="@color/TextColor"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="60dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/settingsButton"
        android:layout_toEndOf="@+id/recipeButton" />





</RelativeLayout>
